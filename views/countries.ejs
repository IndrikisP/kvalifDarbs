             // to do
            // - Add publishing results/ Set logic for end of quiz time
            var countryData;
            var countriesGuessed = 0;
            var quizEnded = false;
            // to fetch the country data
            async function start(region){
                const response = await fetch('http://localhost:3000/api/'+String(region));
                const data = await response.json();
                return data;
            }
            // to mark a country on the map, once it's guessed
