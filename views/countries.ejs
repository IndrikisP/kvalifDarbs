                 });
                 document.getElementsByClassName('svgMap-container')[1].remove();
                 var asd = document.getElementsByClassName('svgMap-country');
                 for(var i = 0; i < asd.length; i++){
                    var ele = asd[i];
                    ele.style["pointer-events"] = "none";
