        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
        <link rel="stylesheet" href="/css/styles.css">
    </head>
    <body>
        <nav class="navbar navbar-expand-md navbar-light" style="background-color: #acc5d0;">
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
              <ul class="nav navbar-nav me-auto">
                <li class="nav-item"><a class="nav-link active" href="/">Home</a></li>
                <li class="nav-item"><a class="nav-link" href="/countries">Countries</a></li>
                <li class="nav-item"><a class="nav-link" href="/flags">Flags</a></li>
                <li class="nav-item"><a class="nav-link" href="/capitals">Capitals</a></li>
                <li class="nav-item">
                <div class="dropdown">
                  <a class="nav-link dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false">
                    Multiple answer
                  </a>
                
                  <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                    <li><a class="dropdown-item" href="/flagsMultiple">Flags</a></li>
                    <li><a class="dropdown-item" href="/capitalsMultiple">Capitals</a></li>
                    <li><a class="dropdown-item" href="/general1">General #1</a></li>
                    <li><a class="dropdown-item" href="/general2">General #2</a></li>
                    <li><a class="dropdown-item" href="/general3">General #3</a></li>
                  </ul>
                </div>
              </li>
                  
              </ul>
              

              <ul class="nav navbar-nav">
                <li class="nav-item"><a id="logIn" class="nav-link" href="/login">Login</a></li>
                <li class="nav-item"><a id="register" class="nav-link" href="/register">Register</a></li>
                <li class="nav-item"><a id="logOut" class="nav-link" style="display:none;" href="/logout">Log out</a></li>
              </ul>
              </div>
             
          </nav>
          <div class="centered-content">
            <div id="guestContent" class="guestContent">
              <h2>User dashboard</h2>
              <p>Log in and finish a test to view any results</p>
            </div>
            <div id="userDashboard" class="userDashboard" style="display:none;">
              <div id="countriesResult">
                <h4> - Countries test best score</h4>
                <p id="bestCountriesRecord"></p>
              </div>
              <div id="flagsResult">
                <h4> - Flags test best score</h4>
                <p id="bestFlagsRecord"></p>
              </div>
              <div id="capitalsResult">
                <h4> - Capitals test best score</h4>
                <p id="bestCapitalsRecord"></p>
              </div>
              <div id="general1Result">
                <h4> - General #1 test best score</h4>
                <p id="general1Record"></p>
              </div>
              <div id="general2Result">
                <h4> - General #2 test best score</h4>
                <p id="general2Record"></p>
              </div>
              <div id="general3Result">
                <h4> - General #3 test best score</h3>
                <p id="general3Record"></p>
              </div>
            </div>
          </div>
          </body>
        
        
        <script>
          function userSetup(){
            var logOut = document.getElementById('logOut');
            var logIn = document.getElementById('logIn');
            var register = document.getElementById('register');
            var guestContent = document.getElementById('guestContent');
            if('<%=locals.username%>') {
              logOut.style.display = "inline-block";
              logIn.style.display = "none";
              register.style.display = "none";
              if('<%=locals.msg1%>' || '<%=locals.msg2%>' || '<%=locals.msg3%>' || '<%=locals.msg4%>' || '<%=locals.msg5%>' || '<%=locals.msg6%>'){
                guestContent.style.display = "none";
              }
              else{
                guestContent.style.display = "inline-block";
              }
            }
            else{
              logOut.style.display = "none";
              logIn.style.display = "inline-block";
              register.style.display = "inline-block";
              guestContent.style.display = "inline-block";
            }
            if('<%=locals.msg1%>'){
              var userDashboard = document.getElementById('userDashboard');
              userDashboard.style.display = "inline-block";
              var result = document.getElementById('countriesResult');
              result.style.display = "block";
              document.getElementById('bestCountriesRecord').innerHTML = '<%=locals.msg1%>';
            }
            if('<%=locals.msg2%>'){
              var userDashboard = document.getElementById('userDashboard');
              userDashboard.style.display = "inline-block";
              var result = document.getElementById('flagsResult');
              result.style.display = "block";
              document.getElementById('bestFlagsRecord').innerHTML = '<%=locals.msg2%>';
            }
            if('<%=locals.msg3%>'){
              var userDashboard = document.getElementById('userDashboard');
              userDashboard.style.display = "inline-block";
              var result = document.getElementById('capitalsResult');
              result.style.display = "block";
              document.getElementById('bestCapitalsRecord').innerHTML = '<%=locals.msg3%>';
            }
            if('<%=locals.msg4%>'){
              var userDashboard = document.getElementById('userDashboard');
              userDashboard.style.display = "inline-block";
              var result = document.getElementById('general1Result');
              result.style.display = "block";
              document.getElementById('general1Record').innerHTML = '<%=locals.msg4%>';
            }
            if('<%=locals.msg5%>'){
              var userDashboard = document.getElementById('userDashboard');
              userDashboard.style.display = "inline-block";
              var result = document.getElementById('general2Result');
              result.style.display = "block";
              document.getElementById('general2Record').innerHTML = '<%=locals.msg5%>';
            }
            if('<%=locals.msg6%>'){
              var userDashboard = document.getElementById('userDashboard');
              userDashboard.style.display = "inline-block";
              var result = document.getElementById('general3Result');
              result.style.display = "block";
              document.getElementById('general3Record').innerHTML = '<%=locals.msg6%>';
            }
          }
          userSetup();
          
          
         </script>
    </body>
</html>