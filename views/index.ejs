        <script>
          function userSetup(){
            var logOut = document.getElementById('logOut');
            var logIn = document.getElementById('logIn');
            var register = document.getElementById('register');
            if('<%=locals.username%>') {
              logOut.style.display = "inline-block";
              logIn.style.display = "none";
              register.style.display = "none";
            }
            else{
              logOut.style.display = "none";
              logIn.style.display = "inline-block";
              register.style.display = "inline-block";
            }
            if('<%=locals.msg1%>'){
              var userDashboard = document.getElementById('userDashboard');
              userDashboard.style.display = "inline-block";
              document.getElementById('bestCountriesRecord').innerHTML = '<%=locals.msg1%>';
            }
            if('<%=locals.msg2%>'){
              var userDashboard = document.getElementById('userDashboard');
              userDashboard.style.display = "inline-block";
              document.getElementById('bestFlagsRecord').innerHTML = '<%=locals.msg2%>';
            }
            if('<%=locals.msg3%>'){
