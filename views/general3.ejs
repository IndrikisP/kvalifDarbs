                                currentIndex++;
                                if(currentIndex == numberOfQuestions){
                                    //end of quiz
                                    quizEnded = true;
                                    if(document.getElementById('question'+String(correctAnswerIndex)).checked == true){
                                        correctAnswers++;
                                    }
                                    uncheckCheckboxes();
                                    document.getElementById('score').innerHTML = String(correctAnswers)+"/"+String(numberOfQuestions);
                                }
                                else{
                                    if(document.getElementById('question'+String(correctAnswerIndex)).checked == true){
