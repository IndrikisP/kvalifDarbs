            function startTimer(){
                var timer = document.getElementById('timer');
                var timerText = timer.innerHTML;
                var minutes = Number(timerText.split(":")[0]);
                var seconds = Number(timerText.split(":")[1]);
                if(seconds == 0){
                    seconds = 59;
                    minutes--;
                } else {
                    seconds--;
                }
                if(minutes < 0 || quizEnded == true){
                    quizEnded = true;
                    endQuizStylingMultiple();
